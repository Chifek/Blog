{% extends 'base.twig' %}
{% block content %}
    <div>
        <form class="form-group" action="{{ path('add_new_post') }}" method="post">
            <div class="form-group">
                <label for="exampleInputTitle2">Title</label>
                <input type="text" class="form-control" id="exampleInputTitle2"
                       placeholder="Title here" name="post[title]" required>
            </div>
            <div class="form-group">
                <label for="exampleInputText2">Text</label>
                <textarea class="form-control" rows="3"
                          placeholder="Enter text here" name="post[text]" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Create new post
            </button>
        </form>
    </div>
{% endblock %}